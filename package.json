{
	"name": "lilypoint",
	"version": "1.0.0",
	"description": "website for counterpoint generator using lilypond",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "bun run build:bundle && bun run build:copy",
		"build:bundle": "bun build src/main.ts --target=node --outdir=dist --sourcemap=external",
		"build:copy": "copyfiles -u 1 \"public/**/*\" dist",
		"typecheck": "tsc --noEmit",
		"dev": "bun --watch src/main.ts"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@types/bun": "^1.3.0",
		"copyfiles": "^2.4.1",
		"typescript": "^5.9.2"
	}
}
